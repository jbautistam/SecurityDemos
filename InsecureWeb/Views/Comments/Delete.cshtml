@model InsecureWeb.Models.CommentModel

@{
	ViewBag.Title = "Comentarios";
}
<h2>@ViewBag.Title.</h2>

<div>
	@using (Html.BeginForm("Delete", "Comments", FormMethod.Post))
	{
		<fieldset>
			
			<div class="form-group row">
				<label for="example-text-input" class="col-2 col-form-label">Asunto:</label>
				<div class="col-10">
					@Html.TextBoxFor(a => a.Subject, htmlAttributes: new { @class = "form-control" } )
				</div>
			</div>

			<div class="form-group row">
				<label for="example-text-input" class="col-2 col-form-label">Comentario:</label>
				<div class="col-10">
					@Html.TextBoxFor(a => a.Body, htmlAttributes: new { @class = "form-control" } )
				</div>
			</div>

			<div class="row  justify-content-end">
				<div class="col-2">
					@Html.HiddenFor(a => a.CommentId)
					<input type="submit" value="Borrar" class="btn btn-primary" />
				</div>
			</div>
		</fieldset>
	}
</div>